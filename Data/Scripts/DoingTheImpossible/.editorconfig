[*.cs]

# IDE0018: Inline variable declaration
csharp_style_inlined_variable_declaration = false:suggestion

# IDE0052: Remove unread private members
dotnet_diagnostic.IDE0052.severity = none

# IDE0022: Use expression body for methods
csharp_style_expression_bodied_methods = false:suggestion

# IDE0019: Use pattern matching
csharp_style_pattern_matching_over_as_with_null_check = false:suggestion

# IDE0046: Convert to conditional expression
dotnet_style_prefer_conditional_expression_over_return = false:suggestion

# IDE0032: Use auto property
dotnet_style_prefer_auto_properties = false:suggestion

# IDE0025: Use expression body for properties
csharp_style_expression_bodied_properties = false:suggestion

# IDE0029: Use coalesce expression
dotnet_style_coalesce_expression = false:suggestion

# IDE0051: Remove unused private members
dotnet_diagnostic.IDE0051.severity = none

# IDE0045: Convert to conditional expression
dotnet_style_prefer_conditional_expression_over_assignment = false:suggestion

# IDE0053: Use expression body for lambda expressions
csharp_style_expression_bodied_lambdas = true:suggestion

# IDE0008: Use explicit type
csharp_style_var_elsewhere = false:suggestion

# IDE0008: Use explicit type
csharp_style_var_for_built_in_types = false:suggestion

# IDE0008: Use explicit type
csharp_style_var_when_type_is_apparent = false:suggestion

# IDE0060: Remove unused parameter
dotnet_code_quality_unused_parameters = true:none

# IDE0039: Use local function
csharp_style_pattern_local_over_anonymous_function = false:suggestion

# IDE0027: Use expression body for accessors
csharp_style_expression_bodied_accessors = false:suggestion

# CS0169: The field 'NanobotDrillSystemBlock._ParticleEffectTransport1Active' is never used
dotnet_diagnostic.CS0169.severity = none
